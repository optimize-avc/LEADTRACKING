rules_version = '2';

/**
 * Multi-Tenant SaaS Security Rules
 * 
 * Prime Directive: "Strict Isolation"
 * Data leaks between companies are fatal. companyId is the primary key.
 * 
 * Updated: 2026-01-25
 * - Added usage tracking subcollection protection
 * - Added Stripe fields protection on user documents
 * - Enhanced global leads collection for Bot integration
 * - Added leads/activities subcollection rules
 */
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================================================
    // HELPER FUNCTIONS
    // ==========================================================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Get the user's company ID from their profile
    function getUserCompanyId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }
    
    // Get the user's role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Check if user belongs to the specified company
    function userBelongsToCompany(companyId) {
      return isAuthenticated() && getUserCompanyId() == companyId;
    }
    
    // Check if user is company admin
    function isCompanyAdmin(companyId) {
      return userBelongsToCompany(companyId) && getUserRole() == 'admin';
    }
    
    // Check if user owns this document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if protected fields are being modified
    function protectedFieldsModified() {
      return request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['companyId', 'role', 'stripeCustomerId', 'stripeSubscriptionId', 'tier', 'subscriptionStatus']);
    }
    
    // ==========================================================================
    // COMPANIES COLLECTION (Multi-Tenant Root)
    // ==========================================================================
    
    match /companies/{companyId} {
      // Only company members can read company data
      allow read: if userBelongsToCompany(companyId);
      
      // Only company admins can update company settings
      allow update: if isCompanyAdmin(companyId);
      
      // Company creation handled server-side only
      allow create, delete: if false;
      
      // --------------------------------------------------------------------------
      // LEADS SUBCOLLECTION (Future: migrate from global /leads)
      // --------------------------------------------------------------------------
      match /leads/{leadId} {
        allow read, create: if userBelongsToCompany(companyId);
        allow update: if userBelongsToCompany(companyId);
        allow delete: if isCompanyAdmin(companyId);
      }
      
      // --------------------------------------------------------------------------
      // ACTIVITIES SUBCOLLECTION  
      // --------------------------------------------------------------------------
      match /activities/{activityId} {
        allow read, create: if userBelongsToCompany(companyId);
        // Activities are immutable (audit trail)
        allow update, delete: if false;
      }
      
      // --------------------------------------------------------------------------
      // REMINDERS SUBCOLLECTION
      // --------------------------------------------------------------------------
      match /reminders/{reminderId} {
        allow read, create, update: if userBelongsToCompany(companyId);
        allow delete: if userBelongsToCompany(companyId) 
          && (resource.data.userId == request.auth.uid || isCompanyAdmin(companyId));
      }
      
      // --------------------------------------------------------------------------
      // TEAM SUBCOLLECTION
      // --------------------------------------------------------------------------
      match /team/{userId} {
        allow read: if userBelongsToCompany(companyId);
        allow create, update, delete: if isCompanyAdmin(companyId);
      }
      
      // --------------------------------------------------------------------------
      // INVITES SUBCOLLECTION
      // --------------------------------------------------------------------------
      match /invites/{inviteId} {
        // Anyone can read invites (for accept flow)
        allow read: if true;
        // Only admins can create/manage invites
        allow create, update, delete: if isCompanyAdmin(companyId);
      }
      
      // --------------------------------------------------------------------------
      // USAGE TRACKING SUBCOLLECTION (META)
      // --------------------------------------------------------------------------
      match /meta/{docId} {
        // Company members can read usage data
        allow read: if userBelongsToCompany(companyId);
        // Only server can write usage data (or admins for manual adjustments)
        allow write: if isCompanyAdmin(companyId);
      }
      
      // --------------------------------------------------------------------------
      // AUDIT LOG SUBCOLLECTION
      // --------------------------------------------------------------------------
      match /auditLog/{logId} {
        // Company members can read audit log
        allow read: if userBelongsToCompany(companyId);
        // Audit logs are created by members, never modified
        allow create: if userBelongsToCompany(companyId);
        allow update, delete: if false;
      }
    }
    
    // ==========================================================================
    // USERS COLLECTION
    // ==========================================================================
    
    match /users/{userId} {
      // Users can read their own profile
      // Company admins can read team members' profiles
      allow read: if isOwner(userId) 
        || (isAuthenticated() && getUserCompanyId() != null 
            && get(/databases/$(database)/documents/users/$(userId)).data.companyId == getUserCompanyId());
      
      // Users can update their own profile (but not protected fields)
      allow update: if isOwner(userId) && !protectedFieldsModified();
      
      // User creation during signup
      allow create: if isOwner(userId);
      
      // Users cannot delete their own profile (handled server-side)
      allow delete: if false;
      
      // User's personal activities subcollection
      match /activities/{activityId} {
        allow read, create: if isOwner(userId);
        // Activities are immutable
        allow update, delete: if false;
      }
      
      // User integrations (Gmail, Twilio, etc.)
      match /integrations/{integrationId} {
        allow read, write: if isOwner(userId);
      }
      
      // Email threads
      match /emailThreads/{threadId} {
        allow read, write: if isOwner(userId);
      }
      
      // Email messages
      match /emailMessages/{messageId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ==========================================================================
    // GLOBAL LEADS COLLECTION (Bot Integration)
    // ==========================================================================
    // Leads are stored at root level to allow Discord Bot integration
    // This is a transitional pattern - eventually migrate to companies/{companyId}/leads
    
    match /leads/{leadId} {
      // Authenticated users can read leads
      allow read: if isAuthenticated();
      
      // Authenticated users can create leads
      allow create: if isAuthenticated();
      
      // Authenticated users can update leads they have access to
      allow update: if isAuthenticated();
      
      // Only admins can delete leads
      allow delete: if isAuthenticated() && getUserRole() == 'admin';
      
      // Lead activities subcollection (public team activities)
      match /activities/{activityId} {
        allow read, create: if isAuthenticated();
        allow update, delete: if false; // Immutable
      }
    }
    
    // ==========================================================================
    // RESOURCES COLLECTION (Enablement Hub)
    // ==========================================================================
    
    match /resources/{resourceId} {
      // Authenticated users can read and create resources
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      
      // Users can update/delete their own resources
      allow update, delete: if isAuthenticated() 
        && resource.data.createdBy == request.auth.uid;
    }
    
    // ==========================================================================
    // INVITES COLLECTION (Global - for invite tokens)
    // ==========================================================================
    
    match /invites/{inviteId} {
      // Anyone can read invites (needed for invite acceptance flow)
      allow read: if true;
      
      // Only authenticated admins can create invites
      allow create: if isAuthenticated() && getUserRole() == 'admin';
      
      // Invites can be updated (accepted/expired) by anyone with the token
      allow update: if true;
      
      // Only admins can delete invites
      allow delete: if isAuthenticated() && getUserRole() == 'admin';
    }
    
    // ==========================================================================
    // DEFAULT DENY
    // ==========================================================================
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
